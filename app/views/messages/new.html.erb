<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規メッセージ作成
      </h1>
    </div>
  </div>
</section>

<% if @message.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@message.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @message.errors.full_messages.each do |comment| %>
      <li><%= comment %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_with model: @message do |f| %>
          <div class="field">
            <%= f.label :title, "タイトル", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>
          <div class="field">
            <%= f.label :body, "内容", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>
          <div class="field">
            <%= f.label :image, "添付", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>
          <%= f.submit '送信', class: "button is-link" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
